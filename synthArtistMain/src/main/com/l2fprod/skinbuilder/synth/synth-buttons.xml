<!-- Button -->
<style id="Button" type="region">
  <states idref="all"/>
  &commonattr;

	<painter method="background" category="Painter"/>
    
	<property name="textShiftOffset" type="int" category="General"/>
	<property name="rolloverEnabled" type="boolean" label="Rollover Enabled"/>
	<property name="contentAreaFilled" type="boolean" label="Content Area Filled"/>
	<property name="margin" type="java.awt.Insets" label="Margin"/>
	<property name="iconTextGap" type="int" label="Icon Text Gap"/>
	<property name="icon" type="java.io.File" label="Icon" category="Painter"/>
</style>

